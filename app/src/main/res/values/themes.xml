<resources>
    <!-- Base application theme. -->
    <style name="Theme.Crypto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlue_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

    </style>

    <style name="textViewHome">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="btn_see_all">
        <item name="android:textColor">#30B0F1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/textForSeeAllBtn</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="BtnTextArticles">
        <item name="android:textColor">#8185A2</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">false</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="background">@color/grey_500</item>
    </style>

    <style name="textSymbols">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/grey_500</item>
    </style>

    <style name="cryptoValue">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="closeButtonArticles">
        <item name="android:colorPrimaryDark">#30B0F1</item>
        <item name="android:background">@drawable/ic_closebutton</item>
    </style>

    <style name="titleForCryptoList" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontWeight">600</item>
        <item name="android:text">@string/cryptoTitleForList</item>
    </style>

    <style name="styleForTextChart">
        <item name="android:text">@string/textForChart</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="bottomTextChart">
        <item name="android:text">@string/bottomTextChart</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#8185A2</item>
    </style>

    <style name="textForExchangeBtn">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titleForCryptoExchange" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="myCoin" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8185A2</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

</resources>